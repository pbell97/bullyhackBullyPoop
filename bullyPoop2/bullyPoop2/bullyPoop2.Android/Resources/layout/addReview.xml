<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayoutAddReview">

		<TextView
			android:text="Building"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/labelBuildingAddReviewTest" />
		<Spinner
			android:layout_width="600px"
			android:layout_height="wrap_content"
			android:id="@+id/spinnerBuildingAddReview" />
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayoutAddReview2">

		<TextView
			android:text="Bathroom"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/labelFloorAddReview" />
        <Spinner
			android:layout_width="600px"
			android:layout_height="wrap_content"
			android:id="@+id/spinnerBathroomAddReview" />

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayoutAddReview5">

		<TextView
			android:text="Rating"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/labelRatingAddReview" />
		<EditText
			android:inputType="number"
			android:layout_width="219.0dp"
			android:layout_height="51.0dp"
			android:id="@+id/inputRatingAddReview" />

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayoutAddReview6">

		<TextView
			android:text="Review"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/labelReviewAddReview" />
		<EditText
			android:inputType="textMultiLine"
			android:layout_width="329.1dp"
			android:layout_height="193.5dp"
			android:id="@+id/inputReviewAddReview" />

	</LinearLayout>

	<Button
		android:text="Submit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/buttonSubmitAddReview" />


	<LinearLayout
		android:orientation="horizontal"
		android:translationY="640px"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="200px"
		android:id="@+id/linearLayoutAddReview4">
		<Button
			android:text="Home"
			android:layout_width="wrap_content"
			android:layout_height="150px"
			android:id="@+id/buttonHomeAddReview" />
		<Button
			android:text="Map"
			android:translationX="200px"
			android:layout_width="wrap_content"
			android:layout_height="150px"
			android:id="@+id/buttonMapAddReview" />
		<Button
			android:text="Account"
			android:translationX="380px"
			android:layout_width="wrap_content"
			android:layout_height="150px"
			android:id="@+id/buttonAccountAddReview" />
	</LinearLayout>

</LinearLayout>
